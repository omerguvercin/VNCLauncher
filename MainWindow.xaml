                        <Button x:Name="btnDelete" Style="{StaticResource DeleteButton}" Click="BtnDelete_Click" ToolTip="SeÃ§ili BaÄŸlantÄ±yÄ± Sil"/>
                        <Button x:Name="btnEdit" Style="{StaticResource EditButton}" Click="BtnEdit_Click" ToolTip="SeÃ§ili BaÄŸlantÄ±yÄ± DÃ¼zenle"/>
                        <TextBlock Text="Ara:" VerticalAlignment="Center" Margin="20,0,5,0" Foreground="#555"/>
                        <TextBox x:Name="txtSearchConnections" Width="200" Style="{StaticResource ModernTextBox}" TextChanged="TxtSearchConnections_TextChanged" VerticalAlignment="Center" Margin="0,0,0,0"/>
                        <ComboBox x:Name="cmbConnectionFilter" Width="120" Height="32" Margin="10,0,0,0" VerticalAlignment="Center"
                                  FontSize="13"
                                  Padding="5,5"
                                  BorderBrush="#CCCCCC"
                                  BorderThickness="1"
                                  Background="White"
                                  Foreground="#333"
                                  SelectionChanged="CmbConnectionFilter_SelectionChanged">
                            <ComboBoxItem Content="TÃ¼mÃ¼" IsSelected="True"/>
                            <ComboBoxItem Content="EriÅŸilebilenler"/>
                            <ComboBoxItem Content="EriÅŸilemeyenler"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- BaÄŸlantÄ± Listesi -->
                    <DataGrid Grid.Row="1" x:Name="dgConnections" 
