                <ContextMenu>
                    <MenuItem Header="GÃ¶ster" Click="ShowMenuItem_Click"/>
                    <MenuItem Header="HÄ±zlÄ± BaÄŸlantÄ±..." Click="QuickConnectMenuItem_Click"/>
                    <Separator />
                    <MenuItem Header="Ã‡Ä±kÄ±ÅŸ" Click="ExitMenuItem_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        
        <!-- Tab Control -->
