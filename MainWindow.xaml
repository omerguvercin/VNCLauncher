                                <TextBox x:Name="txtIpRange" Grid.Column="1" Style="{StaticResource ModernTextBox}" Margin="0,0,0,0" PreviewTextInput="IpRangeTextBox_PreviewTextInput" TextChanged="IpRangeTextBox_TextChanged"/>
                                <Button x:Name="btnScanNetwork" Grid.Column="2" Content="AÄŸÄ± Tara" Margin="15,0,0,0" Padding="15,8" Click="BtnScanNetwork_Click" Background="#3498DB" Foreground="White" BorderThickness="0" Cursor="Hand">
                                    <Button.Resources>
